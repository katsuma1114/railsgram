.login-top
  = image_tag 'login.png',class: "login-image"
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :username, class: "label"
      %br/
      = f.text_field :user_name, class: "text"
    .field
      = f.label :email, class: "label"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "text"
    .field
      = f.label :password, class: "label"
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "text"
    .actions
      = f.submit "CREATE ACCOUNT", class: "form-btn"
  .login-container
    = render "devise/shared/links"
